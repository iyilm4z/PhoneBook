@model UserModel
@{
    ViewBag.Title = "Create a new user";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Create a new user</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-9">
                            <a href="@Url.Action("List")"><i class="fa fa-arrow-circle-left fa-fw"></i>Back to user list</a>
                        </div>
                        <div class="col-lg-3">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save fa-fw"></i>Save</button>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.AntiForgeryToken()
                            @Html.Partial("_CreateOrUpdate", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}